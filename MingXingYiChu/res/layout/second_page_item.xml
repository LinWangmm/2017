<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:padding="5dp">

    <ImageView
        android:id="@+id/second_page_item_imageView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher" />

    <ImageView
        android:id="@+id/second_page_item_imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/second_page_item_imageView1"
        android:src="@drawable/topic_list_style" />

    <TextView
        android:id="@+id/second_page_item_textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/second_page_item_imageView2"
        android:layout_toRightOf="@+id/second_page_item_imageView2"
        android:text="TextView" />
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/second_page_item_imageView2">

<Button
    android:id="@+id/second_page_item_button1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:text="Button" />

<TextView
    android:id="@+id/second_page_item_textView2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@+id/second_page_item_button1"
    android:layout_alignParentLeft="true"
    android:text="TextView" />

</RelativeLayout>



</RelativeLayout>
